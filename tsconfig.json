{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "files": ["src/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
